<h1>All <%= @title %></h1>

<%= search_form_for @q do |f| %>
  <%= f.text_field :address_cont, :placeholder => "Search Address" %>
  <%= f.submit %>
<% end %>

<ul>
<% @users.each do |user| %>
<div class="row">
    <div class="small-4 columns">
      <div class="item-wrapper">
        <div class="img-wrapper">
          <%= link_to "View Profile", user, class: "button expand add-to-cart" %>
          <%= image_tag user.image, :size => '260x180' %>
        </div>  
        <h3><%= user.name %></h3>
          <% user.instruments.each do |instrument| %>
            <strong>| <%= instrument.name %></strong>
          <% end %>
        <p><strong>Hourly Rate: Â£<%= user.price %></strong></p>
      </div>
 
    </div>

  </div>
  <% end %>

</ul>


